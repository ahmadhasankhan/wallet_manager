<p id="notice"><%= notice %></p>

<h1>Listing Refunds</h1>

<table>
  <thead>
    <tr>
      <th>Transaction</th>
      <th>Approved</th>
      <th>Status</th>
      <th>Reason</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @refunds.each do |refund| %>
      <tr>
        <td><%= refund.transaction_id %></td>
        <td><%= refund.approved %></td>
        <td><%= refund.status %></td>
        <td><%= refund.reason %></td>
        <td><%= refund.comment %></td>
        <td><%= link_to 'Show', refund %></td>
        <td><%= link_to 'Edit', edit_refund_path(refund) %></td>
        <td><%= link_to 'Destroy', refund, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

